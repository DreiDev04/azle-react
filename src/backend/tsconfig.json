{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "outDir": "HACK_BECAUSE_OF_ALLOW_JS",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "paths": {
            "App/*": [
                "./app/*"
            ],
            "Config/*": [
                "./config/*"
            ],
            "Contracts/*": [
                "./contracts/*"
            ],
            "Database/*": [
                "./database/*"
            ],
            "Helpers/*": [
                "./utils/*"
            ]
        },
        "types": ["node"]
    },
    "exclude": [
        "../../node_modules"
    ],
    "ts-node": {
        "transpileOnly": true,
        "files": true
    }
}